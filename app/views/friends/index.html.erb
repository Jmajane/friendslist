<p id="notice"><%= notice %></p>

<h1>Friends List</h1>

<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Instagram</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <%= render friend %>
      <p>
        <%= link_to "Show this friend", friend %>
      </p>
    <% end %>
  </tbody>

  <%= link_to "New friend", new_friend_path %>
</table>

